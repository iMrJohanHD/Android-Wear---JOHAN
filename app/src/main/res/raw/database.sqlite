CREATE TABLE `preguntas` (
    _id INTEGER AUTO INCREMENT PRIMARY KEY,
    `pregunta` VARCHAR(256),
    `respuestaCorrecta` VARCHAR(32) NOT NULL,
    `respuestaIncorrecta1` VARCHAR(32) NOT NULL,
    `respuestaIncorrecta2` VARCHAR(32) NOT NULL,
    `respuestaIncorrecta3` VARCHAR(32) NOT NULL,
    `dificultad` CHARACTER NOT NULL DEFAULT 'F',
    `categoria` CHARACTER NOT NULL DEFAULT 'S',
    `imagen` VARCHAR(32) DEFAULT "NULL",
    `sonido` VARCHAR(32) DEFAULT "NULL",
    `tipo` INTEGER NOT NULL
);

-- tipo
-- 1: texto
-- 2: imagen completa
-- 3: imagen botones
-- 4: sonido

